        (
            ('class:' class=ID)
            ('type:' type=[EnvDeviceType])?
            ('dispersion:' dispersion=DispersionType)?
            ('dataModel:' dataModel=[DataType:FQN])?
            ('shape' ':' shape=Shape)?
            ('pubFreq:' pubFreq=FLOAT)?
            ('target_value:' target_value=FLOAT)?
            ('range:' range=FLOAT)?
        )#
