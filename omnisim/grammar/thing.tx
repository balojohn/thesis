Actuator:
    PanTilt     |
    EnvDevice   |
    Relay       |
    Button      |
    Led         |
    Speaker
;

PanTilt:
    'PanTilt' name=ID
        (
            ('class:' class=ID)
            ('dataModel:' dataModel=[DataType:FQN])?
            ('relativePos:' relativePos=Transformation)?
            ('pan_shape' ':' pan_shape=Shape)?
            ('tilt_shape' ':' tilt_shape=Shape)?
            ('pubFreq:' pubFreq=FLOAT)?
        )#
    'end'
;

EnvDevice:
