Speaker:
    'Speaker' name=ID
        (
            ('class:' class=ID)
            ('dataModel:' dataModel=[DataType:FQN])?
            ('shape' ':' shape=Shape)?
            ('pubFreq:' pubFreq=FLOAT)?
            ('soundlevelDB:' soundlevelDB=FLOAT)?
        )#
    'end'
;

Noise:
    Gaussian | Uniform | CustomNoise
;

Gaussian:
    'Gaussian' '('
        'mean:' mean=FLOAT ',' 
        'std:' std=FLOAT
    ')'
;

Uniform:
    'Uniform' '('
        'min:' min=FLOAT ',' 
        'max:' max=FLOAT
    ')'
;

CustomNoise:
    'CustomNoise' '('
        'type:' type=STRING ',' 
        'params:' params=STRING
    ')'
;

DTransformation:
    ('@' transformation=Transformation)? ('on' parentThing=[PosedThing:FQN])?
;

DispersionType:
    Constant      |
    Linear        |
    Quadratic     |
    Exponential   |
    Logarithmic
;

Constant:
    'Constant' '(' 'value' ':' value=FLOAT ')'
;

Linear:
    'Linear' '('
        'start' ':' startingPoint=FLOAT ',' 
        'step' ':' step=FLOAT
    ')'
;

Quadratic:
    'Quadratic' '('
        'a' ':' a=FLOAT ',' 
        'b' ':' b=FLOAT ',' 
        'c' ':' c=FLOAT
    ')'
;

Exponential:
    'Exponential' '('
        'base' ':' base=FLOAT ',' 
        'yIntercept' ':' yIntercept=FLOAT
    ')'
;

Logarithmic:
    'Logarithmic' '('
        'base' ':' base=FLOAT ',' 
        'alpha' ':' alpha=FLOAT
    ')'
;
